{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Prepare",
			"type": "shell",
			"command": "cmake ."
		},
		{
			"label": "Build",
			"type": "shell",
			"command": "ninja",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Unit Tests",
			"type": "shell",
			"command": "ninja utests",
			"group": {
				"kind": "test",
				"isDefault": true
			}
		},
	]
}